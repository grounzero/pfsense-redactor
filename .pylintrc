[MASTER]
# Strict configuration for production code
# Use .pylintrc-tests for test files

[MESSAGES CONTROL]
# Minimal disables - only truly necessary exceptions:
disable=
    R0801,  # duplicate-code (can occur in similar logic paths)

[BASIC]
# Allow common short variable names
good-names=i,j,k,ex,_,ip,id

[FORMAT]
max-line-length=120

[DESIGN]
# Strict limits to encourage clean design:
max-args=7
max-attributes=12
max-branches=12
max-locals=15
max-statements=50
max-returns=6